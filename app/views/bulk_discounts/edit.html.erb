<%= render partial: "shared/nav" %>

<h2>Edit Bulk Discount</h2>

<%= form_with(model: [@merchant, @bulk_discount], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :quantity_threshold, "Quantity Threshold" %>
    <%= form.number_field :quantity_threshold %>
  </div>

  <div class="form-group">
    <%= form.label :percent_discount, "Percent Discount" %>
    <%= form.number_field :percent_discount %>
  </div>

  <div class="actions">
    <%= form.submit "Edit Bulk Discount" %>
  </div>
<% end %>